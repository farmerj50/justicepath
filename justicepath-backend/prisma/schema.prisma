generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(cuid())
  email                String                @unique
  fullName             String
  password             String
  plan                 String?               @default("free")
  tier                 Tier?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  role                 Role                  @default(USER)
  aiGeneratedDocuments AiGeneratedDocument[]
  documents            Document[]
}

model Document {
  id                  String               @id @default(cuid())
  title               String
  type                String
  fileUrl             String
  content             String?
  name                String?
  court               String?
  motionType          String?
  caseNumber          String?
  claimants           String?
  respondents         String?
  userId              String
  createdAt           DateTime             @default(now())
  source              String?              @default("form")
  status              String?              @default("draft")
  aiGeneratedDocument AiGeneratedDocument?
  user                User                 @relation(fields: [userId], references: [id])
}

model AiGeneratedDocument {
  id           String   @id @default(cuid())
  userId       String
  followUps    Json?
  aiSuggestion String?
  source       String?  @default("ai")
  status       String?  @default("draft")
  createdAt    DateTime @default(now())
  documentId   String   @unique
  document     Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id])
}

enum Tier {
  FREE
  PLUS
  PRO
}

enum Role {
  USER
  LAWYER
  BAIL_BONDS
  PROCESS_SERVER
  APARTMENT_MANAGER
  ADMIN
}
