generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  FREE
  PLUS
  PRO
}

model User {
  id        String                @id @default(cuid())
  email     String                @unique
  fullName  String
  password  String
  plan      String?               @default("free")
  tier      Tier?                 
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  documents           Document[]           // Uploaded or final documents
  aiGeneratedDocuments AiGeneratedDocument[] // AI-generated drafts and metadata
}

model Document {
  id          String   @id @default(cuid())
  title       String
  type        String
  fileUrl     String
  content     String?
  name        String?
  court       String?
  motionType  String?
  caseNumber  String?
  claimants   String?   // You could use Json if it's a list
  respondents String?   // Same here
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}


model AiGeneratedDocument {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id])
  userId         String

  documentType   String             // e.g., motion, response
  content        String             // AI-generated text
  followUps      Json?              // Array of { question, answer }
  aiSuggestion   String?            // Next suggestion
  source         String?            // "form", "upload", etc.
  status         String?            // "draft", "submitted"

  createdAt      DateTime @default(now())
}

